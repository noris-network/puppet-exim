  command         = <%= @command %>
<% end -%>
<% unless @exim_environment.nil? -%>
  environment     = <%= @exim_environment.map {|a| a.to_a.join("=") }.join(" : ") %>
<% end -%>
<% if @log_output -%>
  log_output
<% end -%>
<% if @return_fail_output -%>
  return_fail_output
<% end -%>
<% if @return_output -%>
  return_output
<% end -%>
<% if validate_string (@temp_errors) -%>
  temp_errors     = <%= @temp_errors.join(' : ') %>
<% end -%>
<% if @freeze_exec_fail -%>
